<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TransactionActivity">

    <ImageView
        android:id="@+id/canceltransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:text="Type"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:entries="@array/categoryTrans"
            android:textAlignment="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textSize="18dp"
            android:text="@string/Account"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerAcc"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="16dp"
            android:textAlignment="center"
            android:entries="@array/account"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="80dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerAcc2"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:background="@drawable/custom_edittext"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="@string/Amount"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amountText"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:inputType="numberDecimal"
            android:paddingLeft="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:text="@string/Category"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cateText"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="42dp"
            android:text="@string/Note"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/noteText"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_marginBottom="168dp"
        android:background="@color/silver"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>